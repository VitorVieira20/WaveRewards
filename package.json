{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",

        "setup:php": "composer install",
        "setup:key": "php artisan key:generate",

        "db:migrate": "php artisan migrate",
        "db:seed": "php artisan db:seed",
        "db:reset": "php artisan migrate:fresh --seed",

        "storage:link": "php artisan storage:link",
        "queue": "php artisan queue:work",

        "serve": "php artisan serve",
        "dev:full": "npm run serve & npm run dev",

        "project:setup": "npm run setup:php && npm run setup:key && npm run db:migrate && npm run db:seed && npm run storage:link",

        "up:db": "docker compose -f docker/docker-compose.mysql.yml up -d",
        "down:db": "docker compose -f docker/docker-compose.mysql.yml down"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.4",
        "axios": "^1.13.2",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^1.2.0",
        "tailwindcss": "^4.0.0",
        "vite": "^6.2.4"
    },
    "dependencies": {
        "@headlessui/react": "^2.2.4",
        "@hello-pangea/dnd": "^18.0.1",
        "@inertiajs/react": "^2.0.8",
        "@vitejs/plugin-react": "^4.4.0",
        "framer-motion": "^12.19.1",
        "lucide-react": "^0.522.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-toastify": "^11.0.5",
        "recharts": "^3.4.1",
        "socket.io-client": "^4.8.1",
        "swiper": "^11.2.8",
        "tailwindcss-animate": "^1.0.7",
        "ziggy-js": "^2.5.2"
    }
}